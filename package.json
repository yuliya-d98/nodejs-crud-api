    "start:prod": "cross-env NODE_ENV=production npm run build",
    "build": "tsc && node build/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier . --write"
  },
